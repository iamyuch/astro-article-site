---
const siteName = "WikiFlow"; // 网站名称占位符
---

<header class="flex flex-col md:flex-row md:items-end justify-between border-b-2 border-black pb-4 mb-6 gap-4">
  <div>
    <h1 class="text-3xl font-bold tracking-tighter text-black font-sans">
      <a href="/" class="no-underline hover:none text-black">{siteName}</a>
    </h1>
  </div>
  
  <!-- 移动端导航 -->
  <nav class="flex md:hidden gap-3 items-center">
    <a href="/" class="text-sm border border-gray-400 px-3 py-1 hover:bg-gray-100">首页</a>
    <div class="relative">
      <button id="tagDropdown" class="text-sm border border-gray-400 px-3 py-1 hover:bg-gray-100">
        标签 ▼
      </button>
      <div id="tagDropdownMenu" class="hidden absolute top-full left-0 mt-1 bg-white border border-gray-400 shadow-lg min-w-[200px] max-h-[300px] overflow-y-auto z-50">
        <div id="mobileTagsContainer" class="p-2">加载中...</div>
      </div>
    </div>
  </nav>
</header>

<style>
  header a {
    text-decoration: none;
  }
  header a:hover {
    text-decoration: none;
  }
  #tagDropdownMenu.show {
    display: block;
  }
  #mobileTagsContainer a {
    display: block;
    padding: 0.5rem;
    border-bottom: 1px solid #eee;
    color: #0000EE;
  }
  #mobileTagsContainer a:hover {
    background: #f5f5f5;
    text-decoration: underline;
  }
  #mobileTagsContainer a:last-child {
    border-bottom: none;
  }
</style>

<script>
  // 移动端下拉菜单
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      const dropdownToggle = document.getElementById('tagDropdown');
      const dropdownMenu = document.getElementById('tagDropdownMenu');
      
      if (dropdownToggle && dropdownMenu) {
        dropdownToggle.addEventListener('click', (e) => {
          e.stopPropagation();
          dropdownMenu.classList.toggle('show');
          dropdownMenu.classList.toggle('hidden');
        });
        
        // 点击外部关闭
        document.addEventListener('click', () => {
          dropdownMenu.classList.remove('show');
          dropdownMenu.classList.add('hidden');
        });
        
        dropdownMenu.addEventListener('click', (e) => {
          e.stopPropagation();
        });
      }
      
      // 加载标签到移动端下拉菜单
      fetch('/api/tags.json')
        .then(res => res.json())
        .then(tags => {
          const container = document.getElementById('mobileTagsContainer');
          if (container) {
            container.innerHTML = tags.map((tag: { name: string; count: number }) => 
              `<a href="/tag/${encodeURIComponent(tag.name)}/">${tag.name} (${tag.count})</a>`
            ).join('');
          }
        })
        .catch(() => {
          const container = document.getElementById('mobileTagsContainer');
          if (container) container.innerHTML = '加载失败';
        });
    });
  }
</script>
