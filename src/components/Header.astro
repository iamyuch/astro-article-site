---
const siteName = "WikiFlow";
---

<header>
  <div>
    <h1><a href="/">{siteName}</a></h1>
  </div>
  
  <!-- 移动端导航 -->
  <nav class="mobile-nav">
    <a href="/" class="nav-btn">首页</a>
    <div class="dropdown">
      <button id="tagDropdown" class="nav-btn">标签 ▼</button>
      <div id="tagDropdownMenu" class="dropdown-menu">
        <div id="mobileTagsContainer">加载中...</div>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-bottom: 2px solid #000;
    padding-bottom: 1rem;
    margin-bottom: 1.5rem;
    gap: 1rem;
  }
  
  h1 {
    font-size: 1.875rem;
    font-weight: bold;
    letter-spacing: -0.025em;
    font-family: Verdana, Arial, sans-serif;
  }
  
  h1 a {
    color: #000;
    text-decoration: none;
  }
  
  h1 a:hover {
    text-decoration: none;
  }
  
  .mobile-nav {
    display: none;
    gap: 0.75rem;
    align-items: center;
  }
  
  .nav-btn {
    font-size: 0.875rem;
    border: 1px solid #999;
    padding: 0.25rem 0.75rem;
    background: #fff;
    cursor: pointer;
    color: #000;
  }
  
  .nav-btn:hover {
    background: #f5f5f5;
    text-decoration: none;
  }
  
  .dropdown {
    position: relative;
  }
  
  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 0.25rem;
    background: #fff;
    border: 1px solid #999;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    min-width: 200px;
    max-height: 300px;
    overflow-y: auto;
    z-index: 50;
  }
  
  .dropdown-menu.show {
    display: block;
  }
  
  #mobileTagsContainer {
    padding: 0.5rem;
  }
  
  #mobileTagsContainer a {
    display: block;
    padding: 0.5rem;
    border-bottom: 1px solid #eee;
    color: #0000EE;
  }
  
  #mobileTagsContainer a:hover {
    background: #f5f5f5;
  }
  
  #mobileTagsContainer a:last-child {
    border-bottom: none;
  }
  
  @media (max-width: 768px) {
    .mobile-nav {
      display: flex;
    }
    
    header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
  
  @media (min-width: 769px) {
    header {
      flex-direction: row;
      align-items: flex-end;
    }
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      const dropdownToggle = document.getElementById('tagDropdown');
      const dropdownMenu = document.getElementById('tagDropdownMenu');
      
      if (dropdownToggle && dropdownMenu) {
        dropdownToggle.addEventListener('click', (e) => {
          e.stopPropagation();
          dropdownMenu.classList.toggle('show');
        });
        
        document.addEventListener('click', () => {
          dropdownMenu.classList.remove('show');
        });
        
        dropdownMenu.addEventListener('click', (e) => {
          e.stopPropagation();
        });
      }
      
      fetch('/api/tags.json')
        .then(res => res.json())
        .then(tags => {
          const container = document.getElementById('mobileTagsContainer');
          if (container) {
            container.innerHTML = tags.map((tag: { name: string; count: number }) => 
              `<a href="/tag/${encodeURIComponent(tag.name)}/">${tag.name} (${tag.count})</a>`
            ).join('');
          }
        })
        .catch(() => {
          const container = document.getElementById('mobileTagsContainer');
          if (container) container.innerHTML = '加载失败';
        });
    });
  }
</script>
