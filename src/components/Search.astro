---
// 搜索组件
---

<div class="search-wrapper">
  <form onsubmit="return false;" class="search-form">
    <input 
      type="text" 
      id="searchInput"
      placeholder="搜索文章标题..." 
      class="search-input"
      autocomplete="off"
    >
    <button type="button" id="searchButton" class="search-btn">搜索</button>
  </form>
  <div id="searchResults" class="search-results"></div>
</div>

<style>
  .search-wrapper {
    width: 100%;
    position: relative;
  }
  
  .search-form {
    display: flex;
    gap: 0.25rem;
  }
  
  .search-input {
    border: 1px solid #999;
    padding: 0.25rem 0.5rem;
    width: 16rem;
    font-size: 0.875rem;
    font-family: Verdana, Arial, sans-serif;
  }
  
  .search-input:focus {
    outline: none;
    border-color: #000;
  }
  
  .search-btn {
    background: #e5e7eb;
    border: 1px solid #999;
    padding: 0.25rem 0.75rem;
    font-size: 0.875rem;
    color: #000;
    cursor: pointer;
    font-weight: 500;
    font-family: Verdana, Arial, sans-serif;
  }
  
  .search-btn:hover {
    background: #d1d5db;
  }
  
  .search-btn:active {
    background: #9ca3af;
  }
  
  .search-results {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    margin-top: 0.25rem;
    background: #fff;
    border: 1px solid #999;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    max-height: 400px;
    overflow-y: auto;
    z-index: 50;
  }
  
  .search-results.show {
    display: block;
  }
  
  .search-result-item {
    padding: 12px 15px;
    border-bottom: 1px solid #eee;
  }
  
  .search-result-item:last-child {
    border-bottom: none;
  }
  
  .search-result-item:hover {
    background: #f5f5f5;
  }
  
  .search-result-item a {
    color: #0000EE;
    display: block;
  }
  
  .search-result-item a:visited {
    color: #551A8B;
  }
  
  .search-result-item a:hover {
    text-decoration: underline;
  }
  
  .search-result-title {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 5px;
  }
  
  .search-result-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
  }
  
  .search-result-tag {
    font-size: 12px;
    padding: 2px 6px;
    background: #f5f5f5;
    border: 1px solid #ddd;
    color: #666;
  }
  
  .search-no-results {
    padding: 15px;
    text-align: center;
    color: #999;
    font-size: 14px;
  }
  
  .search-highlight {
    background: #ffeb3b;
    font-weight: 500;
  }
  
  @media (min-width: 769px) {
    .search-wrapper {
      width: auto;
    }
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    let articles: any[] = [];
    
    async function loadArticles() {
      try {
        const response = await fetch('/api/articles.json');
        articles = await response.json();
      } catch (error) {
        console.error('加载文章失败:', error);
      }
    }
    
    function searchArticles(query: string) {
      if (!query.trim()) return [];
      const lowerQuery = query.toLowerCase();
      return articles.filter(article => 
        article.title.toLowerCase().includes(lowerQuery)
      );
    }
    
    function highlightText(text: string, query: string): string {
      if (!query.trim()) return text;
      const regex = new RegExp(`(${query})`, 'gi');
      return text.replace(regex, '<span class="search-highlight">$1</span>');
    }
    
    function renderResults(results: any[], query: string) {
      const container = document.getElementById('searchResults');
      if (!container) return;
      
      if (results.length === 0) {
        container.innerHTML = '<div class="search-no-results">未找到匹配的文章</div>';
        container.classList.add('show');
        return;
      }
      
      container.innerHTML = results.map(article => `
        <div class="search-result-item">
          <a href="${article.url}">
            <div class="search-result-title">${highlightText(article.title, query)}</div>
            ${article.tags.length > 0 ? `
              <div class="search-result-tags">
                ${article.tags.map((tag: string) => `<span class="search-result-tag">${tag}</span>`).join('')}
              </div>
            ` : ''}
          </a>
        </div>
      `).join('');
      
      container.classList.add('show');
    }
    
    document.addEventListener('DOMContentLoaded', async () => {
      await loadArticles();
      
      const searchInput = document.getElementById('searchInput') as HTMLInputElement;
      const searchResults = document.getElementById('searchResults');
      const searchButton = document.getElementById('searchButton');
      
      if (!searchInput || !searchResults) return;
      
      searchInput.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value;
        if (!query.trim()) {
          searchResults.classList.remove('show');
          return;
        }
        const results = searchArticles(query);
        renderResults(results, query);
      });
      
      if (searchButton) {
        searchButton.addEventListener('click', () => {
          const query = searchInput.value;
          if (query.trim()) {
            const results = searchArticles(query);
            renderResults(results, query);
          }
        });
      }
      
      document.addEventListener('click', (e) => {
        if (!searchInput.contains(e.target as Node) && !searchResults.contains(e.target as Node)) {
          searchResults.classList.remove('show');
        }
      });
      
      searchInput.addEventListener('focus', () => {
        if (searchInput.value.trim() && searchResults.children.length > 0) {
          searchResults.classList.add('show');
        }
      });
    });
  }
</script>
