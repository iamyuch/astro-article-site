---
import { getAllTags } from '../utils/articles';

const tagMap = await getAllTags();
const tags = Array.from(tagMap.entries())
  .map(([name, count]) => ({ name, count }))
  .sort((a, b) => b.count - a.count);
---

<aside class="sidebar">
  <!-- 标签云 -->
  <section class="sidebar-section">
    <h2 class="sidebar-title">标签</h2>
    <div class="tag-cloud">
      {tags.map(tag => (
        <a href={`/tag/${encodeURIComponent(tag.name)}/`} class="tag-link">
          {tag.name} ({tag.count})
        </a>
      ))}
    </div>
  </section>
  
  <!-- 友情链接 -->
  <section class="sidebar-section">
    <h2 class="sidebar-title">友情链接</h2>
    <div class="links">
      <p class="empty-text">暂无链接</p>
    </div>
  </section>
</aside>

<style>
  .sidebar {
    position: sticky;
    top: 20px;
    height: fit-content;
  }
  
  .sidebar-section {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #ddd;
  }
  
  .sidebar-section:last-child {
    border-bottom: none;
  }
  
  .sidebar-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 15px;
    color: #333;
  }
  
  .tag-cloud {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .tag-link {
    display: inline-block;
    padding: 4px 0;
    color: #0066cc;
    font-size: 14px;
    border-bottom: 1px solid #eee;
  }
  
  .tag-link:hover {
    background: #f5f5f5;
    text-decoration: none;
  }
  
  .links {
    font-size: 14px;
  }
  
  .empty-text {
    color: #999;
    font-style: italic;
  }
</style>
