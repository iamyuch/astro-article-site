---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Sidebar from '../../components/Sidebar.astro';
import Pagination from '../../components/Pagination.astro';
import Search from '../../components/Search.astro';
import { getAllArticles, paginateArticles } from '../../utils/articles';

export async function getStaticPaths() {
  const allArticles = await getAllArticles();
  const totalPages = Math.ceil(allArticles.length / 30);
  
  return Array.from({ length: totalPages }, (_, i) => ({
    params: { page: String(i + 1) },
  }));
}

const { page } = Astro.params;
const pageNum = parseInt(page || '1');

const allArticles = await getAllArticles();
const { articles, currentPage, totalPages } = paginateArticles(allArticles, pageNum, 30);
---

<BaseLayout title={`第 ${currentPage} 页`}>
  <div class="container">
    <Header />
    
    <div class="search-row">
      <div class="spacer"></div>
      <Search />
    </div>

    <div class="main-layout">
      <main class="main-content">
        <div class="article-list-wrapper">
          <ul class="article-list">
            {articles.map(article => (
              <li class="article-item">
                <div class="article-title-wrapper">
                  <a href={article.url} class="article-title">
                    {article.title}
                  </a>
                </div>
                {article.tags.length > 0 && (
                  <div class="article-tags">
                    {article.tags.map(tag => (
                      <a href={`/tag/${encodeURIComponent(tag)}/`} class="tag">
                        #{tag}
                      </a>
                    ))}
                  </div>
                )}
              </li>
            ))}
          </ul>
          
          <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/page/" />
        </div>
      </main>

      <Sidebar />
    </div>

    <footer class="footer">
      <p class="footer-text">
        &copy; 2026 WikiFlow. Powered by <a href="https://astro.build" class="footer-link">Astro</a>.
      </p>
      <p class="footer-links">
        <a href="#">关于</a>
        <a href="#">隐私政策</a>
        <a href="#">联系方式</a>
      </p>
    </footer>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1.5rem 1rem;
    background: #fff;
    min-height: 100vh;
    border-left: 1px solid #e5e7eb;
    border-right: 1px solid #e5e7eb;
  }
  
  .search-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 1.5rem;
  }
  
  .spacer {
    flex-grow: 1;
  }
  
  .main-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .main-content {
    min-width: 0;
  }
  
  .article-list-wrapper {
    margin-bottom: 2rem;
  }
  
  .article-list {
    list-style: none;
    font-size: 1rem;
  }
  
  .article-item {
    padding: 0.5rem 0;
    border-bottom: 1px dotted #d1d5db;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    transition: background-color 0.2s;
  }
  
  .article-item:hover {
    background: #f9fafb;
  }
  
  .article-title-wrapper {
    flex-grow: 1;
  }
  
  .article-title {
    color: #0000EE;
    font-weight: 500;
    font-size: 1.125rem;
  }
  
  .article-title:visited {
    color: #551A8B;
  }
  
  .article-title:hover {
    color: #FF0000;
  }
  
  .article-tags {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
  }
  
  .tag {
    font-size: 0.75rem;
    color: #6b7280;
    background: #f5f5f5;
    padding: 0 0.25rem;
    border: 1px solid #e5e7eb;
    white-space: nowrap;
  }
  
  .tag:hover {
    color: #1f2937;
  }
  
  .footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid #d1d5db;
    text-align: center;
    font-size: 0.75rem;
    color: #6b7280;
  }
  
  .footer-text {
    margin-bottom: 0.5rem;
  }
  
  .footer-link {
    color: #4b5563;
    text-decoration: underline;
  }
  
  .footer-links a {
    margin-right: 0.5rem;
    color: #6b7280;
  }
  
  .footer-links a:hover {
    color: #000;
    text-decoration: underline;
  }
  
  @media (min-width: 769px) {
    .main-layout {
      grid-template-columns: 3fr 1fr;
    }
    
    .article-item {
      flex-direction: row;
      align-items: baseline;
      gap: 1rem;
    }
  }
</style>
